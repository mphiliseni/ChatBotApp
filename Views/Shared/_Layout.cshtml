<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ChatBotApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ChatBotApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ChatBotApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
            <!-- Chatbot button and popup -->
            <div id="chatbot-container" style="position: fixed; bottom: 10px; right: 10px; z-index: 1000;">
                <style>
                    .robot-icon {
                        animation: robotPulse 2s ease-in-out infinite;
                    }
                    @@keyframes robotPulse {
                        0%, 100% { transform: scale(1); }
                        50% { transform: scale(1.1); }
                    }
                    .robot-eyes {
                        animation: robotBlink 3s infinite;
                    }
                    @@keyframes robotBlink {
                        0%, 90%, 100% { opacity: 1; }
                        95% { opacity: 0; }
                    }
                    .robot-antenna {
                        animation: robotAntenna 1.5s ease-in-out infinite;
                        transform-origin: bottom center;
                    }
                    @@keyframes robotAntenna {
                        0%, 100% { transform: rotate(-5deg); }
                        50% { transform: rotate(5deg); }
                    }
                    .typing-dot {
                        width: 6px;
                        height: 6px;
                        background: #007bff;
                        border-radius: 50%;
                        animation: typingBounce 1.5s infinite ease-in-out;
                        display: inline-block;
                        margin: 0 1px;
                    }
                    .typing-dot:nth-child(1) { animation-delay: 0s; }
                    .typing-dot:nth-child(2) { animation-delay: 0.2s; }
                    .typing-dot:nth-child(3) { animation-delay: 0.4s; }
                    @@keyframes typingBounce {
                        0%, 60%, 100% { 
                            opacity: 0.3; 
                            transform: translateY(0); 
                        }
                        30% { 
                            opacity: 1; 
                            transform: translateY(-8px); 
                        }
                    }
                </style>
                <button id="chatbot-button" style="background-color: #007bff; color: white; border-radius: 50%; padding: 15px; border: none; cursor: pointer; font-size: 20px; position: relative; overflow: hidden;">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" class="robot-icon">
                        <!-- Robot Head -->
                        <rect x="6" y="8" width="12" height="10" rx="2" fill="white" stroke="white" stroke-width="0.5"/>
                        <!-- Robot Eyes -->
                        <circle cx="9" cy="12" r="1.5" fill="#007bff" class="robot-eyes"/>
                        <circle cx="15" cy="12" r="1.5" fill="#007bff" class="robot-eyes"/>
                        <!-- Robot Mouth -->
                        <rect x="10" y="15" width="4" height="1" rx="0.5" fill="#007bff"/>
                        <!-- Robot Antenna -->
                        <line x1="12" y1="8" x2="12" y2="5" stroke="white" stroke-width="1" class="robot-antenna"/>
                        <circle cx="12" cy="5" r="1" fill="#ffd700"/>
                        <!-- Robot Body -->
                        <rect x="8" y="18" width="8" height="4" rx="1" fill="white" stroke="white" stroke-width="0.5"/>
                    </svg>
                </button>
                <div id="chatbot-popup" style="display: none; background-color: white; width: 300px; height: 400px; border: 1px solid #007bff; border-radius: 10px; box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);">
                    <div id="chatbot-header" style="background-color: #007bff; color: white; padding: 10px; border-radius: 10px 10px 0 0; text-align: center;">
                        Chat Bot
                    </div>
                    <div id="chatbot-messages" style="height: 300px; overflow-y: auto; padding: 10px; background-color: #f8f9fa;"></div>
                    <input type="text" id="chatbot-input" placeholder="Type your message..." style="width: 100%; padding: 10px; border: none; border-top: 1px solid #007bff; border-radius: 0 0 10px 10px;">
                </div>
            </div>

            <script>
                // Toggle the chatbot popup
                document.getElementById('chatbot-button').addEventListener('click', function () {
                    var popup = document.getElementById('chatbot-popup');
                    popup.style.display = popup.style.display === 'none' ? 'block' : 'none';
                });

                // Function to format time
                function formatTime() {
                    const now = new Date();
                    return now.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
                }

                // Function to create typing indicator
                function showTypingIndicator() {
                    var messages = document.getElementById('chatbot-messages');
                    var typingDiv = document.createElement('div');
                    typingDiv.id = 'typing-indicator';
                    typingDiv.style.cssText = `
                        padding: 10px 15px;
                        margin: 5px 0;
                        background-color: #f8f9fa;
                        border: 1px solid #007bff;
                        border-radius: 20px 20px 20px 5px;
                        max-width: 80%;
                        display: flex;
                        align-items: center;
                        font-style: italic;
                        color: #666;
                        font-size: 14px;
                    `;
                    
                    typingDiv.innerHTML = `
                        <span style="margin-right: 10px;">Bot is typing</span>
                        <div style="display: flex; gap: 3px; align-items: center;">
                            <span class="typing-dot"></span>
                            <span class="typing-dot"></span>
                            <span class="typing-dot"></span>
                        </div>
                    `;
                    
                    messages.appendChild(typingDiv);
                    messages.scrollTop = messages.scrollHeight;
                    return typingDiv;
                }

                // Function to remove typing indicator
                function hideTypingIndicator() {
                    var typingIndicator = document.getElementById('typing-indicator');
                    if (typingIndicator) {
                        typingIndicator.remove();
                    }
                }

                // Function to create message with timestamp
                function createMessage(text, isUser = false) {
                    var messageContainer = document.createElement('div');
                    messageContainer.style.cssText = `
                        margin: 10px 0;
                        display: flex;
                        flex-direction: column;
                        align-items: ${isUser ? 'flex-end' : 'flex-start'};
                    `;

                    var message = document.createElement('div');
                    message.textContent = text;
                    message.style.cssText = `
                        padding: 10px 15px;
                        background-color: ${isUser ? '#007bff' : '#f8f9fa'};
                        color: ${isUser ? 'white' : '#333'};
                        border-radius: ${isUser ? '20px 20px 5px 20px' : '20px 20px 20px 5px'};
                        max-width: 80%;
                        word-wrap: break-word;
                        ${!isUser ? 'border: 1px solid #007bff;' : ''}
                    `;

                    var timestamp = document.createElement('div');
                    timestamp.textContent = formatTime();
                    timestamp.style.cssText = `
                        font-size: 0.7rem;
                        color: #999;
                        margin-top: 2px;
                        margin-${isUser ? 'right' : 'left'}: 10px;
                    `;

                    messageContainer.appendChild(message);
                    messageContainer.appendChild(timestamp);
                    
                    return messageContainer;
                }

                // Handle chatbot input
                document.getElementById('chatbot-input').addEventListener('keypress', function (event) {
                    if (event.key === 'Enter') {
                        var input = document.getElementById('chatbot-input');
                        var messages = document.getElementById('chatbot-messages');

                        if (input.value.trim() !== '') {
                            var userMessageText = input.value.trim();
                            
                            // Add user message with timestamp
                            var userMessage = createMessage(userMessageText, true);
                            messages.appendChild(userMessage);

                            // Clear input field
                            input.value = '';

                            // Scroll to bottom
                            messages.scrollTop = messages.scrollHeight;

                            // Show typing indicator
                            var typingIndicator = showTypingIndicator();

                            // Send message to Azure OpenAI service
                            fetch('/Chat/SendMessage', {
                                method: 'POST',
                                headers: {
                                    'Content-Type': 'application/json'
                                },
                                body: JSON.stringify({ message: userMessageText })
                            })
                            .then(response => response.json())
                            .then(data => {
                                hideTypingIndicator();
                                
                                // Display bot response
                                var botMessage = createMessage(data.response || 'Sorry, I could not process your request.', false);
                                messages.appendChild(botMessage);

                                // Scroll to bottom
                                messages.scrollTop = messages.scrollHeight;
                            })
                            .catch(error => {
                                hideTypingIndicator();
                                
                                // Display error message
                                var errorMessage = createMessage('Sorry, I\'m experiencing technical difficulties. Please try again later.', false);
                                messages.appendChild(errorMessage);
                                
                                // Scroll to bottom
                                messages.scrollTop = messages.scrollHeight;
                            });
                        }
                    }
                });
            </script>

        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - ChatBotApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
